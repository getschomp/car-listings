<%= form_for(@car) do |f| %>
<% if @car.errors.any? %>
<div id="error_explanation">
  <h2><%= pluralize(@car.errors.count, "error") %> prohibited this question from being saved:</h2>
  <ul>
    <% @car.errors.full_messages.each do |message| %>
    <li><%= message %></li>
    <% end %>
  </ul>
</div>
<% end %>
<div class="field">
  <%= f.label :year %><br>
  <%= f.number_field :year %>
</div>
<div class="field">
  <%= f.label :color %><br>
  <%= f.text_area :color %>
</div>
<div class="field">
  <%= f.label :mileage %><br>
  <%= f.number_field :mileage %>
</div>
<div class="field">
  <%= f.label :description %><br>
  <%= f.text_area :description %>
</div>
<div class="field">
  <%= collection_select(:car, :manufacturer_id, Manufacturer.all, :id, :name, prompt: "Select Manufacturer") %>
</div>

<div class="actions">
  <%= f.submit "Create Car" %>
</div>
<% end %>
